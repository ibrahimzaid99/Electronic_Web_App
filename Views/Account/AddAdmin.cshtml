
@model Electronic_Web_App.ViewModel.RegisterUserViewModel

@{
    ViewData["Title"] = "AddAdmin";
}
<style>
    body {
        background-color: #212529;
    }

    .form-container {
        width: 500px;
        border-radius: 0.75rem;
        background-color: black;
        padding: 2rem;
        color: rgba(243, 244, 246, 1);
    }

    .title {
        text-align: center;
        font-size: 1.5rem;
        line-height: 2rem;
        font-weight: 700;
    }

    .form {
        margin-top: 1.5rem;
    }

    .input-group {
        margin-top: 0.25rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
    }

        .input-group label {
            display: block;
            margin-bottom: 4px;
        }

        .input-group input {
            width: 100%;
            border-radius: 0.375rem;
            border: 1px solid rgba(55, 65, 81, 1);
            outline: 0;
            background-color: rgba(17, 24, 39, 1);
            padding: 0.75rem 1rem;
            
        }

            .input-group input:focus {
                /*  border-color: rgba(167, 139, 250); */
            }

    .forgot {
        display: flex;
        justify-content: flex-end;
        font-size: 0.75rem;
        line-height: 1rem;
        margin: 8px 0 14px 0;
    }

        .forgot a, .signup a {
           
            text-decoration: none;
            font-size: 14px;
        }

            .forgot a:hover, .signup a:hover {
               
            }

    #sign {
        display: block;
        width: 100%;
        padding: 0.75rem;
        text-align: center;
        border: none;
        border-radius: 0.375rem;
        font-weight: 600;
    }

    .social-message {
        display: flex;
        align-items: center;
        padding-top: 1rem;
    }

    .line {
        height: 1px;
        flex: 1 1 0%;

    }


    .signup {
        text-align: center;
        font-size: 0.75rem;
        line-height: 1rem;

           
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>


<div class="container">

    <div class="form-container ">
        <p class="title text-success">Add New Admin</p>
        <form asp-action="AddAdmin">
            <div  class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="UserName" class="control-label m-1"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger mt-1"></span>
            </div>
            </br>
            <div class="form-group ">
                <label  asp-for="Password" class="control-label m-1"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger mt-1"></span>
            </div>
            </br>

            <div class="form-group ">
                <label asp-for="ConfirmPassword" class="control-label m-1"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger mt-1"></span>
            </div>
            </br>

            <div class="form-group">
                <label asp-for="Email" class="control-label m-1"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            </br>

            <div class="form-group ">
                <label asp-for="PhoneNumber" class="control-label m-1"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            </br>

            <div class="form-group">
                <label asp-for="Address" class="control-label m-1"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            </br>

            <div class="form-group">
                <input type="submit" value="Create Admin To Page" id="sign" class="btn text-light" style="background-color :#198754 " />
            </div>
        </form>
        <br>
            <a class="mt-3" asp-action="Index" asp-controller="Home">Back to List?</a>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
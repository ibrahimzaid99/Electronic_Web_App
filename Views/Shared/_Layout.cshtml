
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronic_Web_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Electronic_Web_App.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid ">
            <a class="navbar-brand text-success fs-3" href="/home/index">FreeComp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav  me-auto mb-2 mb-lg-0 ms-lg-4 d-flex">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Categories" asp-action="Index">All Categories</a></li>
                        <li class="nav-item"><a class="nav-link active " asp-controller="Products" asp-action="Index">All Products</a></li>
                        <li class="nav-item"><a class="nav-link active " asp-controller="Role" asp-action="NewRole">Add Role</a></li>
                        <li class="nav-item"><a class="nav-link active " asp-controller="Account" asp-action="AddAdmin">Add Admin</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link active  " asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link active  " asp-controller="Home" asp-action="Index">About Us</a></li>



                        <li class="nav-item"><a class="nav-link active " aria-current="page" asp-controller="Categories" asp-action="Index">All Categories</a></li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto gap-1   mb-2 mb-lg-0 ms-lg-4 d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <form class="d-flex">
                            <button class="btn btn-outline-dark" type="submit">

                                Hello
                                <span class="badge bg-dark text-white ms-1 rounded-pill">@User.Identity.Name </span>
                            </button>
                        <li class="nav-item"><a class="nav-link  mx-1 text-success" aria-current="page" asp-controller="Account" asp-action="SignOut">SignOut</a></li>
                        </form>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link mx-1  text-success" aria-current="page" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link  mx-1 text-success" aria-current="page" asp-controller="Account" asp-action="Register">Register</a></li>

                    }
                    <form class="d-flex  ">
                        <a href="\Cart\Index" class="btn btn-outline-dark  " style="color:green;" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="limegreen" class="bi bi-cart4" viewBox="0 0 16 16">
                                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                            </svg>

                            Cart
                        </a>
                    </form>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-success" type="submit">Search</button>
                    </form>
                </ul>


            </div>
        </div>
    </nav>
    @RenderSection("slider",required:false)

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </section>




    <footer class="text-center text-lg-start bg-light text-muted">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom bg-success">
            <!-- Left -->
            <div class="me-5 d-none d-lg-block text-light">
                <span>Get connected with us on social networks:</span>
            </div>
            <!-- Left -->
            <!-- Right -->
            <div>
                <a href="" class="me-4 ">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>

        <section class=" text-light gap-4 " style="background-color: #212529;">
            <div class="container text-center text-md-start ">
                <!-- Grid row -->
                <div class="row p-3 ">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mb-4 me-3 " style="width:600px;">
                        <!-- Content -->
                        <h6 class="fw-bold mb-4 text-success fs-1 mt-2">
                            <i class="fas fa-gem me-3 "></i>FreeComp
                        </h6>
                        <p class="ms-3 w-100">
                            FreeComp Computer is a company specializing in retail and wholesale electronics including laptops, computers and accessories.
                            FreeComp Computer has been established since 2005 in Egypt. It is engaged in wholesale sale, Sigma as a first stage and retailing for more than 14 years in Egypt. Toby has 4 branches in the largest and most famous commercial centers in Egypt
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 text-center mb-4">
                        <!-- Links -->
                        <h6 class="text-success fw-bold mb-4 fs-3 mt-3">
                            Branches
                        </h6>
                        <p>
                            <a href="#!" class=" text-light">Cairo</a>
                        </p>
                        <p>
                            <a href="#!" class=" text-light">Tanta</a>
                        </p>
                        <p>
                            <a href="#!" class=" text-light">Alex</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 text-center mb-4">
                        <!-- Links -->
                        <h6 class="text-success fw-bold mb-4 fs-3 mt-3">
                            Social Media
                        </h6>
                        <p>
                            <a href="#!" class=" text-light">Facebook</a>
                        </p>
                        <p>
                            <a href="#!" class=" text-light">Twitter</a>
                        </p>
                        <p>
                            <a href="#!" class=" text-light">Instagram</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 text-center mb-4">
                        <!-- Links -->
                        <h6 class="text-success fw-bold mb-4 fs-3 mt-3">
                            Contacts
                        </h6>
                        <p><i class="fas fa-home me-3"></i> New York, NY 10012, US</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            info@example.com
                        </p>
                        <p><i class="fas fa-phone me-3"></i> + 01 234 567 88</p>
                        <p><i class="fas fa-print me-3"></i> + 01 234 567 89</p>
                    </div>

                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4 text-light" style="background-color: rgb(0, 0, 0);">
            © 2023 Copyright
            <a class="text-reset " href="https://mdbootstrap.com/"> - FreeComp -</a>
        </div>
        <!-- Copyright -->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>

    a {
        font-size: 20px;
        text-decoration: none;
    }

    body {
        margin: 0;
    }
</style>
